{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "ISSUER",
    "Audience": "AUDIENCE",
    "Key": "a-secret-key-that-is-at-least-128-bits-long",
    
    "ManagerTokenLifetime": "00:10:00",
    "EmployeeTokenLifetime": "1.00:00:00",
    "RefreshWindow": "00:05:00",
    "EmployeeTokenEndOfDay": "18:00:00"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source={Dir}/Persistence/DB/Monitoring.db"
  }
}
